<Grid x:Class="CryostatControlClient.Views.Tabs.GraphFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:viewModels="clr-namespace:CryostatControlClient.ViewModels"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid.Resources>
        <viewModels:ZoomingModeCoverter x:Key="ZoomingModeCoverter"></viewModels:ZoomingModeCoverter>
    </Grid.Resources>

    <TextBlock>Toggle zoming mode, current is: 
        <TextBlock Text="{Binding BlueforsViewModel.ZoomingMode, Converter={StaticResource ZoomingModeCoverter}}"/>
    </TextBlock>
    <Button Command="{Binding BlueforsViewModel.ZoomCommand}">Toggle Zoom</Button>

    <wpf:CartesianChart Series="{Binding SeriesCollection}" Margin="20" LegendLocation="Left" DisableAnimations="True" Hoverable="False" Zoom="{Binding BlueforsViewModel.ZoomingMode}">
        <wpf:CartesianChart.AxisX>
            <wpf:Axis Title="Time" LabelFormatter="{Binding XFormatter}" />
        </wpf:CartesianChart.AxisX>
        <wpf:CartesianChart.AxisY >
            <wpf:Axis Title="Kelvin" />
        </wpf:CartesianChart.AxisY>
    </wpf:CartesianChart>
</Grid>