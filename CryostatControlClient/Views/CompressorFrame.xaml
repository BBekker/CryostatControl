<Grid x:Class="CryostatControlClient.Views.CompressorFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*"></ColumnDefinition>
        <ColumnDefinition Width="1*"></ColumnDefinition>
        <ColumnDefinition Width="3*"></ColumnDefinition>
        <ColumnDefinition Width="1*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="1*"></RowDefinition>
        <RowDefinition Height="1*"></RowDefinition>
        <RowDefinition Height="1*"></RowDefinition>
    </Grid.RowDefinitions>

    <Viewbox Grid.Column="0" Grid.Row="0">
        <StackPanel>
            <Label x:Name="operatingState">Operating State: </Label>
            <Label x:Name="oilTemperature">Oil Temperature: </Label>
            <Label x:Name="heliumTemperature">Helium Temperature: </Label>
        </StackPanel>
    </Viewbox>

    <Viewbox Grid.Column="1" Grid.Row="0">
        <StackPanel>
            <Label x:Name="operatingStateValue">Dancing</Label>
            <Label x:Name="oilTemperatureValue">-9K</Label>
            <Label x:Name="heliumTemperatureValue">1000K</Label>
        </StackPanel>
    </Viewbox>
</Grid>
