<Grid 
    x:Class="CryostatControlClient.Views.TabFrame"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz">
    
    <Grid.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Grid.Resources>

    <dragablz:TabablzControl Style="{StaticResource TabFrame}" Background="#3949ab">
        <dragablz:TabablzControl.InterTabController>
            <dragablz:InterTabController />
        </dragablz:TabablzControl.InterTabController>
        <TabItem Header="Overview">
            <Frame Source="OverviewFrame.xaml"></Frame>
        </TabItem>
        <TabItem Header="He-7 Cooler">
            <Frame Source="He7Frame.xaml"></Frame>
        </TabItem>
        <TabItem Header="BlueFors cryostat">
            <Frame Source="BlueforsFrame.xaml"></Frame>
        </TabItem>
        <TabItem Header="Compressor">
            <Frame Source="CompressorFrame.xaml"></Frame>
        </TabItem>
        <TabItem Header="Graph">
            <Frame Source="GraphFrame.xaml"></Frame>
        </TabItem>
        <TabItem Header="Logging">
            <Frame Source="LoggingFrame.xaml"></Frame>
        </TabItem>
        
    </dragablz:TabablzControl>
</Grid>


