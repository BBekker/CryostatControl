<Page 
    x:Class="CryostatControlClient.Views.TabFrame"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz">
    
    <Page.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Page.Resources>

    <Border Style="{StaticResource TabBorder}">
        <dragablz:TabablzControl Style="{StaticResource TabFrame}">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
            <TabItem Header="Overview">
                <Frame Source="Tabs/OverviewFrame.xaml"></Frame>
            </TabItem>
            <TabItem Header="He-7 Cooler">
                <Frame Source="Tabs/He7Frame.xaml"></Frame>
            </TabItem>
            <TabItem Header="BlueFors cryostat">
                <Frame Source="Tabs/BlueforsFrame.xaml"></Frame>
            </TabItem>
            <TabItem Header="Compressor">
                <Frame Source="Tabs/CompressorFrame.xaml"></Frame>
            </TabItem>
            <TabItem Header="Graph">
                <Frame Source="Tabs/GraphFrame.xaml"></Frame>
            </TabItem>
            <TabItem Header="Logging">
                <Frame Source="Tabs/LoggingFrame.xaml"></Frame>
            </TabItem>

        </dragablz:TabablzControl>
    </Border>
</Page>


