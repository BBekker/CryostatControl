<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Name="Page1">
    <Page.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </Page.Resources>

    <materialDesign:Card Style="{StaticResource graphCard}">
        <Grid Style="{StaticResource MainGraphFrame}">
            <wpf:CartesianChart Series="{Binding SeriesCollection}" Margin="20" LegendLocation="Left" >
                <wpf:CartesianChart.AxisX>
                    <wpf:Axis Title="Time" LabelFormatter="{Binding XFormatter}" />
                </wpf:CartesianChart.AxisX>
                <wpf:CartesianChart.AxisY >
                    <wpf:Axis Title="Kelvin" />
                </wpf:CartesianChart.AxisY>
            </wpf:CartesianChart>
        </Grid>
    </materialDesign:Card>
</Page>